{
  "name": "nextjs-ethereum-starter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "wizard": "yarn workspace nextjs-ethereum-starter-frontend dev -p 3000",
    "admin": "yarn workspace create-nft-dao-contracts-frontend dev -p 3001",
    "build": "yarn workspace nextjs-ethereum-starter-frontend build",
    "build:shared": "yarn workspace create-nft-dao-shared-frontend build",
    "start": "yarn workspace nextjs-ethereum-starter-frontend start",
    "chain": "yarn workspace nextjs-ethereum-starter-hardhat chain",
    "deploy": "yarn workspace nextjs-ethereum-starter-hardhat deploy",
    "deploy:rinkeby": "yarn workspace nextjs-ethereum-starter-hardhat deploy:rinkeby",
    "compile": "yarn workspace nextjs-ethereum-starter-hardhat compile",
    "clean": "yarn workspace nextjs-ethereum-starter-hardhat clean",
    "test": "yarn workspace nextjs-ethereum-starter-hardhat test"
  },
  "devDependencies": {
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "//": "added ts-node here to overcome the bug with HH and yarn where hardhat throws HH13 when ts-node is only installed in the hardhat package.",
    "ts-node": "^10.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
