{
  "name": "@create-nft-dao/hardhat",
  "license": "MIT",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "yarn run compile && yarn run build:ts",
    "build:ts": "tsc -p tsconfig.json",
    "chain": "npx hardhat node --network hardhat",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat --network localhost run scripts/deploy.ts",
    "deploy:rinkeby": "npx hardhat --network rinkeby run scripts/deploy.ts",
    "deploy:arbitrum-rinkeby": "npx hardhat --network arbitrum-rinkeby run scripts/deploy.ts",
    "deploy:mumbai": "npx hardhat --network mumbai run scripts/deploy.ts",
    "test": "npx hardhat test --network hardhat",
    "test-gas": "REPORT_GAS=1 npx hardhat test --network hardhat",
    "console": "npx hardhat console --network localhost",
    "console:rinkeby": "npx hardhat console --network rinkeby",
    "verify:rinkeby": "npx hardhat verify --network rinkeby",
    "verify:mainnet": "npx hardhat verify --network mainnet",
    "verify:optimistic-kovan": "npx hardhat verify --network optimistic-kovan",
    "verify:arbitrum-rinkeby": "npx hardhat verify --network arbitrum-rinkeby",
    "verify:mumbai": "npx hardhat verify --network mumbai"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.1",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.12.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.1",
    "hardhat": "^2.6.7",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-gas-reporter": "^1.0.4",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.2",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "base64-sol": "^1.0.1",
    "dotenv": "^10.0.0"
  }
}
